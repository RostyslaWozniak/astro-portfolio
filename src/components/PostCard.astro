---
import { Image } from 'astro:assets';
import FormattedDate from '@/components/FormattedDate.astro';
import { ArrowUp } from 'lucide-react';
import { Card, CardContent, CardFooter, CardHeader } from './ui/card';

const {
  post: { title, slug, date, img, category },
} = Astro.props;
---

<Card className="group">
  <CardHeader>
    <a class="relative overflow-hidden" href={`/blog/${slug}/`}>
      <Image
        src={img}
        width={300}
        height={200}
        format="webp"
        class="aspect-video h-full min-w-full rounded-sm object-cover transition-all duration-200 hover:scale-[101%]"
        alt={`img of ${title}`}
      />
    </a>
  </CardHeader>
  <CardContent>
    <a class="text-2xl font-semibold -tracking-wider" href={`/blog/${slug}/`}>
      {title}
    </a>
  </CardContent>
  <CardFooter className="flex justify-between">
    <a
      href={`/blog/${slug}/`}
      class="group flex items-center justify-center gap-1 rounded-full font-semibold transition-transform duration-150 ease-in-out hover:translate-x-1 dark:text-white"
      aria-label={`go to ${title}`}>
      Read Post <span
        class="duration-250 mt-[1px] transition-transform ease-in-out group-hover:rotate-45"
        ><ArrowUp width="18" height="18" /></span
      >
    </a>
    <FormattedDate date={date} />
  </CardFooter>
</Card>
