---
import MaxWidthWrapper from '@/components/MaxWidthWrapper.astro';
import Layout from '@/layouts/Layout.astro';
import FaceImg from '@/components/face-img.astro';
import { Projects } from '@/components/Projects';

const pageTitle = 'Portfolio';
---

<Layout title={pageTitle} description={`${pageTitle} page`}>
  <section class="w-full overflow-x-hidden">
    <MaxWidthWrapper className="px-5 pb-5 lg:px-20">
      <div class="grid pb-5 lg:grid-cols-[1fr_300px]">
        <div
          class="slide-in-left mx-auto hidden flex-col items-start justify-center gap-2 sm:flex sm:items-center lg:items-start lg:justify-center">
          <h1
            class="text-4xl font-bold tracking-tighter text-primary sm:text-5xl xl:text-6xl">
            My {pageTitle}
          </h1>
          <p
            class="max-w-[600px] text-muted-foreground sm:text-center lg:max-w-full lg:text-start">
            Welcome to my portfolio, where I present a collection of web
            projects I have designed and implemented. Each project is bringing
            creativity, functionality, and a passion for delivering exceptional
            digital experiences. You can also check out my websites on GitHub.
            Enjoy!
          </p>
        </div>

        <div class="order-first lg:order-last">
          <FaceImg />
        </div>
      </div>
      <Projects client:load />
    </MaxWidthWrapper>
  </section>
</Layout>
