---
import MaxWidthWrapper from '@/components/MaxWidthWrapper.astro';
import Layout from '@/layouts/Layout.astro';
import ProjectsCarousel from '@/components/ProjectsCarousel.astro';
import FaceImg from '@/components/face-img.astro';
import { Projects } from '@/components/Projects';

const pageTitle = 'Portfolio';
---

<Layout title={pageTitle} description={`${pageTitle} page`}>
  <section class="w-full">
    <MaxWidthWrapper>
      <div
        class="flex items-center justify-around pb-5 md:grid-cols-[1fr_300px]">
        <h1
          class="slide-in-left h-full text-center text-4xl font-bold tracking-tighter text-primary sm:text-5xl xl:text-6xl">
          My {pageTitle}
        </h1>

        <div class="order-first lg:order-last">
          <FaceImg />
        </div>
      </div>
      <Projects client:load />
    </MaxWidthWrapper>
  </section>
</Layout>
