---
import { projects } from '@/data/projects';
import { sluglify } from '@/lib/slugify';
import { ArrowRight } from 'lucide-react';

export type Props = {
  projectIndex: number;
};
const { projectIndex } = Astro.props;
---

<a
  href={sluglify(
    projectIndex === projects.length - 1
      ? projects[0]?.title || ''
      : projects[projectIndex + 1]?.title || ''
  )}
  class="fixed right-0 top-1/2 z-50 flex h-32 -translate-y-1/2 items-center rounded-l-full bg-foreground text-background opacity-30 duration-300 hover:opacity-100"
  ><ArrowRight /></a
>
